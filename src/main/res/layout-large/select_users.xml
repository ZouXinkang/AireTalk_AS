<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="720dp"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/func_contact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:focusable="true"
            android:background="@drawable/plainbtn"
            android:text="@string/friends"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/func_addressbook"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:focusable="true"
            android:background="@drawable/plainbtn"
            android:text="@string/addressbook"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/func_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:focusable="true"
            android:background="@drawable/plainbtn"
            android:text="@string/enter_number"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/controls"
        android:layout_below="@+id/title"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/contacts"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="3dp" >

                <RelativeLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp">

	                <EditText
	                    android:id="@+id/keyword"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/edit_bg"
	                    android:hint="@string/search"
	                    android:inputType="textNoSuggestions"
	                    android:maxLength="30"
	                    android:paddingBottom="6dp"
	                    android:paddingLeft="16dp"
	                    android:paddingRight="16dp"
	                    android:paddingTop="6dp"
	                    android:singleLine="true"
	                    android:textColor="#27394b"
	                    android:textSize="24sp" />
	                
	                <ImageView
						android:id="@+id/clear"
						android:layout_marginLeft="6dp"
						android:visibility="gone"
						android:layout_centerVertical="true"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:focusable="true"
						android:src="@drawable/clear_f"/>
                
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/seperator" />

                <GridView
                    android:id="@+id/friends"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="@color/background_main2"
                    android:focusable="true"
                    android:gravity="center"
                    android:listSelector="@drawable/optionbtn"
                    android:numColumns="4"
                    android:verticalSpacing="0dp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/addressbook"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="3dp" >

                <EditText
                    android:id="@+id/keyword2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_bg"
                    android:hint="Search address book..."
                    android:inputType="textNoSuggestions"
                    android:maxLength="30"
                    android:nextFocusLeft="@id/keyword"
                    android:nextFocusUp="@id/keyword"
                    android:paddingBottom="6dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="6dp"
                    android:singleLine="true"
                    android:textColor="#27394b"
                    android:textSize="24sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/seperator" />

                <ListView
                    android:id="@+id/phonebook"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:cacheColorHint="@color/background_main2"
                    android:divider="#ffdddddd"
                    android:dividerHeight="1dp"
                    android:fastScrollEnabled="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/keypad"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@drawable/keypad_bg"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical" >
					
				<RelativeLayout 
				    android:layout_width="fill_parent"
					android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="0dp" >
					
			        <ImageView
						android:id="@+id/cleariso"
						android:layout_marginRight="10dp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:focusable="true"
						android:src="@drawable/clear_f"/>
			        
					<Spinner
					    android:id="@+id/selectiso"
					    android:layout_toLeftOf="@+id/cleariso"
					    android:layout_width="match_parent"
					    android:layout_height="40dp"
						android:layout_centerVertical="true"
						android:layout_marginLeft="15dp"
						android:layout_marginRight="5dp"
						android:focusable="true"
						android:textSize="14sp" />
				
				</RelativeLayout>
					
				<RelativeLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal" >
                    
	                <com.pingshow.airecenter.view.DigitTextView
	                    android:id="@+id/number_to_call"
	                    android:layout_width="fill_parent"
	                    android:layout_height="50dp"
	                    android:layout_toLeftOf="@+id/del"
	                    android:background="@drawable/edit_bg"
	                    android:clickable="true"
	                    android:gravity="center_vertical|right"
	                    android:maxLength="21"
	                    android:paddingLeft="16dp"
	                    android:paddingRight="16dp"
	                    android:textColor="#00cd1d"
	                    android:textStyle="bold"
	                    android:typeface="sans" />
	                
	                <ImageButton
                        android:id="@+id/del"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="9dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/graybtn"
                        android:padding="0dp"
                        android:src="@drawable/k_del" />
				    
				</RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/key1"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/wbtn"
                        android:text="1"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/key2"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/wbtn"
                        android:padding="0dp"
                        android:text="2"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/key3"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/wbtn"
                        android:padding="0dp"
                        android:text="3"
                        android:textSize="32sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/key4"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/wbtn"
                        android:padding="0dp"
                        android:text="4"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/key5"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/wbtn"
                        android:padding="0dp"
                        android:text="5"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/key6"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/wbtn"
                        android:padding="0dp"
                        android:text="6"
                        android:textSize="32sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/key7"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/wbtn"
                        android:padding="0dp"
                        android:text="7"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/key8"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/wbtn"
                        android:padding="0dp"
                        android:text="8"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/key9"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/wbtn"
                        android:padding="0dp"
                        android:text="9"
                        android:textSize="32sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/keyStar"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/wbtn"
                        android:padding="0dp"
                        android:text="*"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/key0"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/wbtn"
                        android:padding="0dp"
                        android:text="0 +"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/keyHash"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/wbtn"
                        android:padding="0dp"
                        android:text="#"
                        android:textSize="32sp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/plainbtn"
            android:text="@string/cancel"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/done"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/plainbtn"
            android:text="@string/done"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>