<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/background_main2">
	
    <FrameLayout
	    android:id="@+id/sidebar"
	    android:background="@drawable/sidebar_bg"
	    android:padding="10dp"
	    android:layout_width="120dp"
		android:layout_height="fill_parent">
		
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
			android:layout_height="fill_parent">
            
            <RelativeLayout
	            android:layout_weight="1"
	            android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp">
				
	            <ImageView
	                android:id="@+id/bar1"
	                android:background="@drawable/barbtn"
	                android:src="@drawable/bar1"
	                android:clickable="true"
	                android:focusable="true"
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
	            
				<TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingBottom="5dp"
	                android:layout_centerHorizontal="true"
	                android:layout_alignParentBottom="true"
	                android:text="@string/bar1_name"
	                android:textColor="#c0c0c0"
	                android:textSize="15sp"
	                android:textStyle="bold"/>
				
            </RelativeLayout>
            
            <RelativeLayout
	            android:layout_weight="1"
	            android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp">
				
	            <ImageView
	                android:id="@+id/bar7"
	                android:background="@drawable/barbtn"
	                android:src="@drawable/bar7_focused"
	                android:clickable="true"
	                android:focusable="true"
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
	            
				<TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingBottom="5dp"
	                android:layout_centerHorizontal="true"
	                android:layout_alignParentBottom="true"
	                android:text="@string/bar7_name"
	                android:textColor="#c0c0c0"
	                android:textSize="15sp"
	                android:textStyle="bold" />
				
            </RelativeLayout>
            
            <RelativeLayout
	            android:layout_weight="1"
	            android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp">
				
	            <ImageView
	                android:id="@+id/bar8"
	                android:background="@drawable/barbtn"
	                android:src="@drawable/bar8"
	                android:clickable="true"
	                android:focusable="true"
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
	            
				<TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingBottom="5dp"
	                android:layout_centerHorizontal="true"
	                android:layout_alignParentBottom="true"
	                android:text="@string/bar8_name"
	                android:textColor="#c0c0c0"
	                android:textSize="15sp"
	                android:textStyle="bold" />
				
            </RelativeLayout>
            
            <RelativeLayout
	            android:layout_weight="1"
	            android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp">
				
	            <ImageView
	                android:id="@+id/bar6"
	                android:background="@drawable/barbtn"
	                android:src="@drawable/bar6"
	                android:clickable="true"
	                android:focusable="true"
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
	            
				<TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingBottom="5dp"
	                android:layout_centerHorizontal="true"
	                android:layout_alignParentBottom="true"
	                android:text="@string/bar6_name"
	                android:textColor="#c0c0c0"
	                android:textSize="15sp"
	                android:textStyle="bold" />
				
            </RelativeLayout>
            
        </LinearLayout>
	</FrameLayout>

    <RelativeLayout 
        android:layout_toRightOf="@+id/sidebar"
        android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
		<FrameLayout
			android:id="@+id/title"
			android:layout_width="fill_parent"
			android:layout_height="53dp"
			android:layout_alignParentTop="true"
			android:background="@drawable/titlebar" >
	
			<TextView
				android:id="@+id/topic"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="center"
				android:text="@string/home_security"
				android:textColor="#FFFFFF"
				android:textSize="26sp"
				android:textStyle="bold" />
			
			<LinearLayout
			    android:id="@+id/oncall"
			    android:background="#000000"
			    android:layout_gravity="right"
			    android:orientation="horizontal"
			    android:layout_width="240dp"
				android:layout_height="fill_parent"/>
			
		</FrameLayout>
		
		<LinearLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/setting"
                    android:layout_width="300dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/optionbtn"
                    android:gravity="center_horizontal"
                    android:text="@string/monitoring"
                    android:focusable="true"
                    android:padding="5dp"
                    android:textSize="24sp"
                    android:textColor="@color/darkblue"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/tab_static"
                    android:gravity="center_horizontal"
                    android:text="@string/history"
                    android:padding="5dp"
                    android:textSize="24sp"
                    android:textColor="#3997d5"/>
            </LinearLayout>
        </LinearLayout>
        
		<View
		    android:id="@+id/seperator"
		    android:layout_below="@+id/tab"
		    android:background="#3997d5"
		    android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"
		    android:layout_width="fill_parent"
            android:layout_height="2dp"/>
		
		<ListView
        	android:id="@+id/history"
        	android:layout_below="@+id/seperator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="20dp"
            android:background="#00000000"
            android:cacheColorHint="#00000000"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:divider="#909090"
            android:dividerHeight="1px"/>
		
	</RelativeLayout>
	
    <FrameLayout
		android:id="@+id/notification"
		android:layout_width="280dp"
		android:layout_height="100dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true">
	</FrameLayout>
    
</RelativeLayout>