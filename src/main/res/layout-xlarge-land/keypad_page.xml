<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#ffffff">

	<FrameLayout
		android:id="@+id/title"
		android:layout_width="fill_parent"
		android:layout_height="60dp"
		android:layout_alignParentTop="true"
		android:background="@drawable/titlebar">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent" >

			<TextView
				android:id="@+id/topic"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="10dp"
				android:shadowColor="#80000000"
				android:shadowDx="1"
				android:shadowDy="2"
				android:shadowRadius="2"
				android:text="@string/aire_free_call"
				android:textColor="#FFFFFF"
				android:textSize="32sp"
				android:textStyle="bold|italic" />

			<TextView
				android:id="@+id/credit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toLeftOf="@+id/buy"
				android:padding="5dp"
				android:textColor="#ffff00"
				android:textSize="18sp" />

			<ImageButton
				android:id="@+id/buy"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:focusable="true"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="10dp"
				android:background="@drawable/optionbtn"
				android:src="@drawable/buy" />
		</RelativeLayout>
	</FrameLayout>

	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_above="@+id/options"
		android:layout_below="@+id/title">

		<ListView
			android:id="@+id/contacts"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:cacheColorHint="#ffffff"
			android:divider="#ffdddddd"
			android:dividerHeight="1dp"
			android:fastScrollEnabled="true"
			android:focusableInTouchMode="true"/>
	</FrameLayout>

	<FrameLayout
		android:id="@+id/options"
		android:layout_width="fill_parent"
		android:layout_height="60dp"
		android:layout_alignParentBottom="true"
		android:background="@drawable/optionbar" >

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:paddingBottom="2dp"
			android:paddingTop="2dp" >

			<Button
				android:id="@+id/bFafauser"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:background="@drawable/tabbtn"
				android:paddingLeft="20dp"
				android:drawablePadding="-30dp"
				android:drawableLeft="@drawable/tab_user"
				android:text="@string/friends"
				android:textColor="@color/optionbtn_text"
				android:textStyle="bold"
				android:textSize="18sp"/>

			<Button
				android:id="@+id/bMessage"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:background="@drawable/tabbtn"
				android:paddingLeft="20dp"
				android:focusable="true"
				android:drawablePadding="-30dp"
				android:drawableLeft="@drawable/tab_msg"
				android:text="@string/messages"
				android:textColor="@color/optionbtn_text"
				android:textStyle="bold"
				android:textSize="18sp"/>
			
			<Button
				android:id="@+id/bSipOut"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:background="@drawable/tabbtn_focused"
				android:paddingLeft="20dp"
				android:focusable="true"
				android:drawablePadding="-30dp"
				android:drawableLeft="@drawable/sipcall_pressed"
				android:text="@string/aire_free_call"
				android:textColor="#ffffff"
				android:textStyle="bold"
				android:textSize="18sp"/>

			<Button
				android:id="@+id/bSearch"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:background="@drawable/tabbtn"
				android:paddingLeft="20dp"
				android:focusable="true"
				android:drawablePadding="-30dp"
				android:drawableLeft="@drawable/tab_search"
				android:text="@string/security"
				android:textColor="@color/optionbtn_text"
				android:textStyle="bold"
				android:textSize="18sp"/>

			<Button
				android:id="@+id/bSetting"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:focusable="true"
				android:background="@drawable/tabbtn"
				android:paddingLeft="20dp"
				android:drawablePadding="-30dp"
				android:drawableLeft="@drawable/tab_setting"
				android:text="@string/setting"
				android:textColor="@color/optionbtn_text"
				android:textStyle="bold"
				android:textSize="18sp"/>
		</LinearLayout>
	</FrameLayout>

	<FrameLayout
		android:id="@+id/keypad"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/options"
		android:layout_centerHorizontal="true"
		android:layout_gravity="bottom"
		android:layoutAnimation="@anim/layout_slide_in">

		<LinearLayout
			android:layout_width="400dp"
			android:layout_height="360dp"
			android:layout_gravity="center"
			android:background="@drawable/keypad_bg2"
			android:gravity="center"
			android:orientation="vertical" >

			<com.pingshow.airecenter.view.DigitTextView
				android:id="@+id/number_to_call"
				android:layout_width="fill_parent"
				android:layout_height="60dp"
				android:layout_margin="8dp"
				android:background="@drawable/edit_bg"
				android:clickable="true"
				android:gravity="center_vertical|right"
				android:maxHeight="45dp"
				android:maxLength="21"
				android:padding="5dp"
				android:textStyle="bold"
				android:textColor="#00cd1d"
				android:typeface="sans" />

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="75dp"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:orientation="horizontal" >

				<ImageButton
					android:id="@+id/key1"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="8dp"
					android:src="@drawable/k_1" />

				<ImageButton
					android:id="@+id/key2"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="8dp"
					android:src="@drawable/k_2" />

				<ImageButton
					android:id="@+id/key3"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="8dp"
					android:src="@drawable/k_3" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="75dp"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:orientation="horizontal" >

				<ImageButton
					android:id="@+id/key4"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="8dp"
					android:src="@drawable/k_4" />

				<ImageButton
					android:id="@+id/key5"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="8dp"
					android:src="@drawable/k_5" />

				<ImageButton
					android:id="@+id/key6"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="8dp"
					android:src="@drawable/k_6" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="75dp"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:orientation="horizontal" >

				<ImageButton
					android:id="@+id/key7"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="8dp"
					android:src="@drawable/k_7" />

				<ImageButton
					android:id="@+id/key8"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="8dp"
					android:src="@drawable/k_8" />

				<ImageButton
					android:id="@+id/key9"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="8dp"
					android:src="@drawable/k_9" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="75dp"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:orientation="horizontal" >

				<ImageButton
					android:id="@+id/keyStar"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="8dp"
					android:src="@drawable/k_star" />

				<ImageButton
					android:id="@+id/key0"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="8dp"
					android:src="@drawable/k_0" />

				<ImageButton
					android:id="@+id/keyHash"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="8dp"
					android:src="@drawable/k_hash" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="75dp"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:orientation="horizontal" >

				<ImageView
					android:id="@+id/close"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="14dp"
					android:src="@drawable/more" />

				<ImageButton
					android:id="@+id/call"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="5dp"
					android:src="@drawable/k_call" />

				<ImageButton
					android:id="@+id/del"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:focusable="true"
					android:background="@drawable/optionbtn"
					android:padding="8dp"
					android:src="@drawable/k_del" />
			</LinearLayout>
		</LinearLayout>
	</FrameLayout>

</RelativeLayout>