<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobile="http://www.airetalk.com"
    android:orientation="vertical" 
    android:background="@drawable/metal_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/onair1"
	    android:src="@drawable/radio_ind"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/onair2"
	    android:src="@drawable/radio_ind"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/onair3"
	    android:src="@drawable/radio_ind"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/tunning"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="310dp" 
		android:layout_height="130dp">
    <com.pingshow.airecenter.view.HScroll
        android:id="@+id/channels"
        android:layout_alignParentTop="true"
        android:scrollbars="none"
        mobile:barId="0"
        mobile:interval="68"
        mobile:offset="122"
        android:padding="5dp"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<ImageView
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:src="@drawable/channels"/>
	</com.pingshow.airecenter.view.HScroll>
	<com.pingshow.airecenter.view.HScroll
        android:id="@+id/languages"
        android:layout_alignParentBottom="true"
        android:scrollbars="none"
        android:padding="5dp"
        mobile:barId="1"
        mobile:interval="50"
        mobile:offset="130"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<ImageView
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:src="@drawable/languages"/>
    </com.pingshow.airecenter.view.HScroll>
    
	<ImageView
	    android:layout_alignParentTop="true"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:src="@drawable/tune_top"/>
	
	<ImageView
	    android:layout_alignParentBottom="true"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:src="@drawable/tune_bottom"/>
	
	<ImageView
	    android:layout_alignParentRight="true"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:src="@drawable/tune_right"/>
	
	<ImageView
	    android:layout_alignParentLeft="true"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:src="@drawable/tune_left"/>
	
	<ImageView
	    android:layout_marginTop="5dp"
	    android:layout_centerHorizontal="true"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:src="@drawable/tune_aim"/>
	
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/tuner"
        android:layout_below="@+id/tunning"
        android:layout_margin="10dp"
	    android:layout_alignParentRight="true"
        android:layout_width="100dp" 
		android:layout_height="100dp">
	    <ImageView
			android:layout_width="100dp" 
			android:layout_height="100dp" 
			android:src="@drawable/tuner"/>
	    <com.pingshow.airecenter.view.Tuner
	        android:layout_marginLeft="8dp"
		    android:layout_marginTop="15dp"
            android:id="@+id/volume"
            android:layout_width="69dp" 
			android:layout_height="69dp" >
        </com.pingshow.airecenter.view.Tuner>
    </RelativeLayout>
    
    <com.pingshow.airecenter.view.Strength
        android:layout_below="@+id/tunning"
        android:layout_marginLeft="30dp"
	    android:layout_marginTop="30dp"
		android:id="@+id/strength"
		android:background="@drawable/strength_bg"
		android:layout_width="140dp" 
		android:layout_height="32dp" >
    </com.pingshow.airecenter.view.Strength>
    
    <com.pingshow.airecenter.view.LED
        android:id="@+id/led"
        android:layout_below="@+id/strength"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/strength_bg"
		android:layout_width="62dp" 
		android:layout_height="32dp" >
    </com.pingshow.airecenter.view.LED>
    
    <Button
	 	android:id="@+id/speaking_btn"
	 	android:layout_above="@+id/options"
	 	android:layout_centerHorizontal="true"
		android:background="@drawable/rwtbtn"
		android:layout_marginBottom="10dp"
		android:layout_width="240dp"
	  	android:layout_height="135dp"/>
    
    <FrameLayout
		android:id="@+id/options"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_alignParentBottom="true"
		android:background="@drawable/optionbar" >

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:paddingBottom="2dp"
			android:paddingTop="2dp" >

			<Button
				android:id="@+id/bFafauser"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginLeft="3dp"
				android:layout_marginRight="3dp"
				android:layout_weight="1"
				android:background="@drawable/tabbtn"
				android:drawablePadding="-10dp"
				android:drawableTop="@drawable/tab_user"
				android:text="@string/friends"
				android:textColor="#505050"
				android:textSize="9dp" />

			<Button
				android:id="@+id/bMessage"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginLeft="3dp"
				android:layout_marginRight="3dp"
				android:layout_weight="1"
				android:background="@drawable/tabbtn"
				android:drawablePadding="-10dp"
				android:drawableTop="@drawable/tab_msg"
				android:text="@string/messages"
				android:textColor="#505050"
				android:textSize="9dp" />
			
			<Button
				android:id="@+id/bSipOut"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginLeft="3dp"
				android:layout_marginRight="3dp"
				android:layout_weight="1"
				android:background="@drawable/tabbtn"
				android:drawablePadding="-10dp"
				android:drawableTop="@drawable/tab_sipcall"
				android:text="@string/aire_free_call"
				android:textColor="#505050"
				android:textSize="9dp"/>

			<Button
				android:id="@+id/bSearch"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginLeft="3dp"
				android:layout_marginRight="3dp"
				android:layout_weight="1"
				android:background="@drawable/tabbtn_focused"
				android:drawablePadding="-10dp"
				android:drawableTop="@drawable/searchkey_pressed"
				android:text="@string/security"
				android:textColor="#ffffff"
				android:textSize="9dp" />

			<Button
				android:id="@+id/bSetting"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginLeft="3dp"
				android:layout_marginRight="3dp"
				android:layout_weight="1"
				android:background="@drawable/tabbtn"
				android:drawablePadding="-10dp"
				android:drawableTop="@drawable/tab_setting"
				android:text="@string/setting"
				android:textColor="#505050"
				android:textSize="9dp" />
		</LinearLayout>
	</FrameLayout>
    
</RelativeLayout>