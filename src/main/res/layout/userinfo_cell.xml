<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:riv="http://schemas.android.com/apk/res/com.pingshow.airecenter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.pingshow.airecenter.view.RoundImageview
        android:id="@+id/photo"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        riv:borderRadius="20dp"
        riv:src="@drawable/empty"
        riv:type="round"
        />
    
     <TextView
        android:id="@+id/mask"
        android:text="@string/put_in_blacklist"
        android:background="#80800000"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:visibility="gone"/>
     
     <TextView
        android:id="@+id/friendname"
        android:paddingLeft="5dp"
       	android:paddingRight="5dp"
       	android:layout_below="@+id/photo"
       	android:layout_centerHorizontal="true"
       	android:gravity="center_horizontal"
		android:textColor="@color/darkgray"
        android:textSize="13sp"
        android:maxLines="2"
        android:layout_width="wrap_content"
        android:layout_height="36sp"/>
     
     <TextView
        android:id="@+id/unread"
        android:background="@drawable/unread_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginRight="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
     
    <ImageView
        android:id="@+id/delete"
        android:src="@drawable/delete"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:visibility="gone"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    
    <TextView
        android:id="@+id/separator"
        android:layout_below="@+id/friendname"
        android:background="#3f5872"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="35dp"/>

</RelativeLayout>