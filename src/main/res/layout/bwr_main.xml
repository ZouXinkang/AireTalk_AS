<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:id="@+id/main_content" >
	
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
		android:background="@color/background_main2" >
		
		<RelativeLayout
		    android:visibility="visible"
		    android:id="@+id/sidebar_ghost"
		    android:layout_width="100dp"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"/>
		
	    <RelativeLayout 
	        android:layout_width="fill_parent"
			android:layout_height="fill_parent"
		    android:paddingBottom="20dp"
		    android:background="@color/white">
	        
			<RelativeLayout
				android:id="@+id/title"
				android:layout_width="fill_parent"
				android:layout_height="53dp"
				android:layout_alignParentTop="true"
				android:background="@drawable/titlebar" >
		        
				<ImageView
				    android:id="@+id/menu_main"
				    android:src="@drawable/ic_menu_w"
				    android:layout_width="60dp"
					android:layout_height="match_parent"
					android:layout_marginLeft="10dp"
					android:focusable="true"
					android:clickable="true"/>
		        
				<Button
				    android:visibility="visible"
					android:id="@+id/back_main"
					android:paddingRight="20dp"
					android:layout_marginLeft="35dp"
					android:layout_toRightOf="@+id/menu_main"
					android:layout_centerVertical="true"
					android:drawableLeft="@drawable/cancel2"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:background="@drawable/tabbtn"
					android:text="@string/back"
					android:textColor="#ffffff"
					android:textSize="24sp" />
		
				<TextView
					android:id="@+id/topic"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:gravity="center"
					android:text="@string/browser_name"
					android:textColor="#FFFFFF"
					android:textSize="33sp"/>
				
				<LinearLayout
				    android:visibility="gone"
				    android:id="@+id/oncall"
				    android:background="#000000"
				    android:layout_gravity="right"
				    android:orientation="horizontal"
				    android:layout_width="240dp"
					android:layout_height="fill_parent"/>
				
			</RelativeLayout>
	
		   	<RelativeLayout
		   	    android:id="@+id/navsplash"
		   	    android:visibility="visible"
		   		android:layout_width="fill_parent"
		   		android:layout_height="fill_parent"
		        android:layout_below="@+id/title"
		        android:background="@color/background_main2"
		        android:paddingLeft="80dp"
		        android:paddingRight="80dp" >
				
			    <TextView
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			 		android:layout_alignParentRight="true"
			 		android:layout_marginTop="15dp"
			 		android:layout_marginBottom="20dp"
			        android:layout_marginRight="40dp"
				    android:textSize="20sp"
				    android:text=""
				    android:textColor="#000000"
			    	android:id="@+id/storage_label1" />
			    
			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="match_parent"
			        android:orientation="vertical"
			        android:layout_below="@+id/storage_label1"
			        android:layout_marginLeft="80dp"
			        android:layout_marginRight="80dp"
			        android:layout_marginBottom="50dp"
			        android:weightSum="10"
			        android:id="@+id/mnavsplash" >
			        
				    <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="0dp"
				        android:layout_marginBottom="0dp"
				        android:orientation="horizontal"
			        	android:weightSum="3"
				        android:layout_weight="4" >
				        
				        <ImageButton
				            android:id="@+id/dest1"
				            android:layout_weight="1"
					        android:layout_width="0dp"
				        	android:layout_marginLeft="0dp"
				        	android:layout_marginRight="40dp"
					        android:layout_height="match_parent"
					        android:background="@drawable/bwr_icon_vid" />
				        
				        <ImageButton
				            android:id="@+id/dest2"
				            android:layout_weight="1"
					        android:layout_width="0dp"
				        	android:layout_marginLeft="40dp"
				        	android:layout_marginRight="40dp"
					        android:layout_height="match_parent"
					        android:background="@drawable/bwr_icon_pic" />
				        
				        <ImageButton
				            android:id="@+id/dest3"
				            android:layout_weight="1"
					        android:layout_width="0dp"
				        	android:layout_marginLeft="40dp"
				        	android:layout_marginRight="0dp"
					        android:layout_height="match_parent"
					        android:background="@drawable/bwr_icon_mus" />
				        
			        </LinearLayout>
			        
				    <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="0dp"
				        android:layout_marginBottom="30dp"
				        android:orientation="horizontal"
			        	android:weightSum="3"
				        android:layout_weight="1" >
				        
				        <TextView
				            android:layout_weight="1"
					        android:layout_width="0dp"
					        android:layout_height="match_parent"
				        	android:layout_marginLeft="0dp"
				        	android:layout_marginRight="40dp"
				        	android:gravity="center_horizontal"
				        	android:textColor="#000000"
				        	android:textSize="30sp"
					        android:text="@string/bwr_video" />
				        
				        <TextView
				            android:layout_weight="1"
					        android:layout_width="0dp"
					        android:layout_height="match_parent"
				        	android:layout_marginLeft="40dp"
				        	android:layout_marginRight="40dp"
				        	android:gravity="center_horizontal"
				        	android:textColor="#000000"
				        	android:textSize="30sp"
					        android:text="@string/bwr_images" />
				        
				        <TextView
				            android:layout_weight="1"
					        android:layout_width="0dp"
					        android:layout_height="match_parent"
				        	android:layout_marginLeft="40dp"
				        	android:layout_marginRight="0dp"
				        	android:gravity="center_horizontal"
				        	android:textColor="#000000"
				        	android:textSize="30sp"
					        android:text="@string/bwr_music" />
				    
				    </LinearLayout>
			        
				    <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="0dp"
				        android:layout_marginTop="0dp"
				        android:orientation="horizontal"
			        	android:weightSum="3"
				        android:layout_weight="4" >
				        
				        <ImageButton
				            android:id="@+id/dest4"
				            android:layout_weight="1"
					        android:layout_width="0dp"
				        	android:layout_marginLeft="0dp"
				        	android:layout_marginRight="40dp"
					        android:layout_height="match_parent"
					        android:background="@drawable/bwr_icon_fil" />
				        
				        <ImageButton
				            android:id="@+id/dest5"
				            android:layout_weight="1"
					        android:layout_width="0dp"
				        	android:layout_marginLeft="40dp"
				        	android:layout_marginRight="40dp"
					        android:layout_height="match_parent"
					        android:background="@drawable/bwr_icon_sec" />
					        
				        <ImageButton
				            android:id="@+id/dest6"
				            android:layout_weight="1"
					        android:layout_width="0dp"
				        	android:layout_marginLeft="40dp"
				        	android:layout_marginRight="0dp"
					        android:layout_height="match_parent"
					        android:background="@drawable/bwr_icon_us" />
				        
			        </LinearLayout>
			        
				    <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="0dp"
				        android:layout_marginBottom="0dp"
				        android:orientation="horizontal"
			        	android:weightSum="3"
				        android:layout_weight="1" >
				    
				        <TextView
				            android:layout_weight="1"
					        android:layout_width="0dp"
					        android:layout_height="match_parent"
				        	android:layout_marginLeft="0dp"
				        	android:layout_marginRight="40dp"
				        	android:gravity="center_horizontal"
				        	android:textColor="#000000"
				        	android:textSize="30sp"
					        android:text="@string/bwr_files" />
				        
				        <TextView
				            android:layout_weight="1"
					        android:layout_width="0dp"
					        android:layout_height="match_parent"
				        	android:layout_marginLeft="40dp"
				        	android:layout_marginRight="40dp"
				        	android:gravity="center_horizontal"
				        	android:textColor="#000000"
				        	android:textSize="30sp"
					        android:text="@string/bwr_security" />
				        
				        <TextView
				            android:layout_weight="1"
					        android:layout_width="0dp"
					        android:layout_height="match_parent"
				        	android:layout_marginLeft="40dp"
				        	android:layout_marginRight="0dp"
				        	android:gravity="center_horizontal"
				        	android:textColor="#000000"
				        	android:textSize="30sp"
					        android:text="@string/bwr_external" />
				        
				    </LinearLayout>
			        
			    </LinearLayout>
				
		   	</RelativeLayout>
	
		   	<RelativeLayout
		   	    android:id="@+id/navfolder"
		   	    android:visibility="gone"
		   		android:layout_width="fill_parent"
		   		android:layout_height="fill_parent"
		        android:layout_below="@+id/title"
		        android:paddingLeft="80dp"
		        android:paddingRight="80dp" >
	
			   	<RelativeLayout
			   	    android:id="@+id/mainnav"
			   		android:layout_width="match_parent"
			   		android:layout_height="wrap_content"
			        android:paddingTop="20dp"
			        android:paddingBottom="10dp"
			        android:paddingLeft="10dp"
			        android:paddingRight="10dp"
			   		android:gravity="center" >
			   		
				    <TextView
				        android:visibility="visible"
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
			   			android:layout_alignParentRight="true"
			   			android:layout_centerVertical="true"
			   			android:layout_marginRight="10dp"
				    	android:textColor="@color/black"
					    android:textSize="18sp"
					    android:text=""
				    	android:id="@+id/storage_label2" />
			   		
			    	<LinearLayout
			    		android:orientation="horizontal"
			    		android:layout_width="match_parent"
			    		android:layout_height="wrap_content"
			    		android:background="@color/white"
			    		android:layout_toRightOf="@+id/homeHOME"
			    		android:layout_toLeftOf="@+id/storage_label2"
			    		android:padding="0dp"
			    		android:weightSum="7"
			    		android:gravity="center">
			    		
			    		<ImageButton
			    			android:layout_width="0dp"
			    			android:layout_height="70dp"
			    			android:layout_weight="1"
			    			android:padding="6dp"
			    			android:layout_margin="6dp"
			    			android:background="@drawable/bwr_btn_bac"
			    			android:id="@+id/back_button" />
			    		<ImageButton
			    			android:layout_width="0dp"
			    			android:layout_height="70dp"
			    			android:layout_weight="1"
			    			android:padding="6dp"
			    			android:layout_marginTop="6dp"
			    			android:layout_marginBottom="6dp"
			    			android:layout_marginLeft="6dp"
			    			android:layout_marginRight="1dp"
			    			android:background="@drawable/bwr_btn_hom"
			    			android:id="@+id/home_button" />
			    		<ImageButton
			    			android:layout_width="0dp"
			    			android:layout_height="70dp"
			    			android:layout_weight="1"
			    			android:padding="6dp"
			    			android:layout_marginTop="6dp"
			    			android:layout_marginBottom="6dp"
			    			android:layout_marginLeft="1dp"
			    			android:layout_marginRight="6dp"
			    			android:background="@drawable/bwr_btn_us"
			    			android:id="@+id/ext_button" />
			    		<ImageButton
			    			android:layout_width="0dp"
			    			android:layout_height="70dp"
			    			android:layout_weight="1"
			    			android:padding="6dp"
			    			android:layout_margin="6dp"
			    			android:background="@drawable/bwr_btn_chec"
			    			android:id="@+id/multiselect_button" />
			    		<ImageButton
			    			android:layout_width="0dp"
			    			android:layout_height="70dp"
			    			android:layout_weight="1"
			    			android:padding="6dp"
			    			android:layout_margin="6dp"
			    			android:background="@drawable/bwr_btn_sear"
			    			android:id="@+id/search_button" />
			    		<ImageButton
			    			android:layout_width="0dp"
			    			android:layout_height="70dp"
			    			android:layout_weight="1"
			    			android:padding="6dp"
			    			android:layout_margin="6dp"
			    			android:background="@drawable/bwr_btn_sett"
			    			android:id="@+id/setting_button" />
			    	</LinearLayout>
			    	
			    </RelativeLayout>
			    
		    	<TextView
			    	android:id="@+id/path_label"
			    	android:layout_below="@+id/mainnav"
			    	android:text=""
			    	android:textColor="@color/black"
			    	android:background="@color/background_main2"
			    	android:maxLines="1"
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			        android:paddingTop="5dp"
			        android:paddingBottom="5dp"
			        android:paddingLeft="40dp"
			        android:paddingRight="20dp"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
			    	android:textSize="18sp"/>
		    	<Button
		    		android:id="@+id/paste_2"
		    		android:layout_alignParentRight="true"
		    		android:layout_above="@+id/detail_label"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:textSize="18sp"
			        android:paddingLeft="20dp"
			        android:paddingRight="20dp"
			        android:layout_marginBottom="0dp"
			        android:layout_marginRight="30dp"
		    		android:text="@string/bwr_paste"
		    		android:visibility="gone" />
			    <TextView
			    	android:id="@+id/detail_label"
			    	android:layout_below="@+id/path_label"
			    	android:textColor="@color/brightRed"
			    	android:background="#111111"
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			        android:paddingTop="5dp"
			        android:paddingBottom="5dp"
			        android:paddingLeft="20dp"
			        android:paddingRight="20dp"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
			    	android:textSize="16sp"
			    	android:gravity="center_vertical|right" />
				<ImageView
				    android:background="@drawable/shadow_line"
				    android:layout_above="@+id/android:list"
				    android:layout_width="fill_parent"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
					android:layout_height="6dp"/>
		    	<ListView
			    	android:layout_below="@+id/detail_label"
			    	android:layout_above="@+id/hidden_buttons"
		    		android:layout_width="fill_parent"
		    		android:layout_height="match_parent"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
		    		android:padding="10dp"
		    		android:drawSelectorOnTop="true"
		    		android:listSelector="#50FFFFFF"
		    		android:smoothScrollbar="true"
		    		android:longClickable="true"
		    		android:background="@color/black"
		    		android:id="@+id/android:list" />
			    		
			    <!--  Footer for Multi-select buttons -->
			    <LinearLayout
			    	android:id="@+id/hidden_buttons"
					android:layout_alignParentBottom="true"
			    	android:orientation="horizontal"
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
			    	android:background="@color/black"
			    	android:visibility="gone">
			    	<Button
			    		android:id="@+id/hidden_attach"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_weight="1"
			    		android:textSize="20sp"
			    		android:text="@string/bwr_email"/>
			    	<Button
			    		android:id="@+id/hidden_delete"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_weight="1"
			    		android:textSize="20sp"
			      		android:text="@string/bwr_delete"/>
			    	<Button
			    		android:id="@+id/hidden_copy"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_weight="1"
			    		android:textSize="20sp"
			    		android:text="@string/bwr_copy"/>
			    	<Button
			    		android:id="@+id/hidden_move"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_weight="1"
			    		android:textSize="20sp"
			    		android:text="@string/bwr_move" />
			    	<Button
			    		android:id="@+id/hidden_cancel"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_weight="1"
			    		android:textSize="20sp"
			    		android:text="@string/bwr_cancel"/>
			    </LinearLayout>
		    
		    </RelativeLayout>
			
			<ImageView
			    android:background="@drawable/shadow_line"
			    android:layout_below="@+id/title"
			    android:layout_width="fill_parent"
				android:layout_height="6dp"/>
				
		</RelativeLayout>
	    
	    <FrameLayout
			android:id="@+id/notification"
			android:layout_width="280dp"
			android:layout_height="100dp"
	       	android:layout_marginBottom="-20dp"
	       	android:layout_marginRight="-20dp"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true">
		</FrameLayout>
	    
	</RelativeLayout>
	
	<RelativeLayout
		android:id="@+id/sidebar_frame_drawer"
	    android:layout_width="140dp"
	    android:layout_height="match_parent"
		android:background="@drawable/sidebar_bg"
	    android:layout_gravity="start" >
	    
	    <LinearLayout
		    android:id="@+id/sidebar_frame"
		    android:layout_above="@+id/settings"
		    android:paddingTop="10dp"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp"
		    android:layout_width="140dp"
			android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:gravity="center">
	        
	        <RelativeLayout
	            android:layout_weight="1"
	            android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp">
				
	            <ImageView
	                android:id="@+id/bar1"
	                android:background="@drawable/barbtn"
	                android:src="@drawable/bar1"
	                android:clickable="true"
	                android:focusable="true"
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"/>
	            
				<TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingBottom="5dp"
	                android:layout_centerHorizontal="true"
	                android:layout_alignParentBottom="true"
	                android:text="@string/bar1_name"
	                android:textColor="#c0c0c0"
	                android:textSize="18sp"
	                android:textStyle="bold"
	            	android:layout_marginBottom="20dp"/>
				
	        </RelativeLayout>
	        
	        <RelativeLayout
	            android:layout_weight="1"
	            android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp">
				
	            <ImageView
	                android:id="@+id/bar7"
	                android:background="@drawable/barbtn"
	                android:src="@drawable/bar7_focused"
	                android:clickable="true"
	                android:focusable="true"
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
	            	android:paddingBottom="5dp"/>
	            
				<TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingBottom="5dp"
	                android:layout_centerHorizontal="true"
	                android:layout_alignParentBottom="true"
	                android:text="@string/bar7_name"
	                android:textColor="#ffffff"
	                android:textSize="18sp"
	                android:textStyle="bold"
	            	android:layout_marginBottom="25dp" />
				
	        </RelativeLayout>
	        
	        <RelativeLayout
	            android:id="@+id/bar9_block"
	            android:layout_weight="1"
	            android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginTop="10dp"
	            android:layout_marginBottom="30dp">
				
	            <ImageView
	                android:id="@+id/bar9"
	                android:background="@drawable/barbtn"
	                android:src="@drawable/bar9_png"
	                android:clickable="true"
	                android:focusable="true"
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
	            	android:paddingBottom="35dp"/>
	            
				<TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingBottom="5dp"
	                android:layout_centerHorizontal="true"
	                android:layout_alignParentBottom="true"
	                android:text="@string/bar9_name"
	                android:textColor="#c0c0c0"
	                android:textSize="18sp"
	                android:textStyle="bold"
	            	android:layout_marginBottom="20dp" />
	        
	        </RelativeLayout>
	           
		</LinearLayout>
	    
	</RelativeLayout>
	
</android.support.v4.widget.DrawerLayout>

