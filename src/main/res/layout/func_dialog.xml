<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	
    <ImageView
		android:id="@+id/close"
		android:clickable="true"
		android:src="@drawable/close"
		android:background="@drawable/optionbtn"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:padding="0dp"
		android:focusable="true"
		android:layout_marginRight="10dp"
		android:layout_marginTop="0dp"/>
	
	<ImageView
		android:id="@+id/photo"
		android:clickable="true"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_centerHorizontal="true"
		android:layout_alignParentTop="true"
		android:focusable="true"
        android:padding="5dp"
        android:background="@drawable/optionbtn"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"/>
	
	<TextView
		android:id="@+id/displayname"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/photo"
		android:layout_centerHorizontal="true"
		android:gravity="center"
		android:textStyle="bold"
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
		android:textColor="#3a3b3d"
		android:textSize="20sp"/>

	<TextView
		android:id="@+id/mood"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/displayname"
		android:ellipsize="end"
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
		android:gravity="center"
		android:lines="1"
		android:textColor="#3a3b3d"
		android:textSize="18sp"/>
	
	<LinearLayout
		android:layout_below="@+id/mood"
		android:layout_marginTop="5dp"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
	    <Button
			android:id="@+id/chat"
			android:layout_margin="5dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:focusable="true"
			android:background="@drawable/plainbtn"
			android:drawableLeft="@drawable/chat"
			android:drawablePadding="-30dp"
			android:paddingLeft="0dp"
			android:text="@string/chat"
			android:textSize="16sp"
			android:textColor="#ffffff"/>
	    
		<Button
			android:id="@+id/call"
			android:layout_margin="5dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:focusable="true"
			android:background="@drawable/plainbtn"
			android:drawableLeft="@drawable/func_call"
			android:drawablePadding="-30dp"
			android:paddingLeft="0dp"
			android:text="@string/call"
			android:textSize="16sp"
			android:textColor="#ffffff"/>
		
		<Button
			android:id="@+id/videocall"
			android:layout_margin="5dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:focusable="true"
			android:background="@drawable/plainbtn"
			android:drawableLeft="@drawable/func_video"
			android:drawablePadding="-10dp"
			android:paddingLeft="0dp"
			android:text="@string/videocall"
			android:textSize="16sp"
			android:textColor="#ffffff"/>
		
	</LinearLayout>
</RelativeLayout>