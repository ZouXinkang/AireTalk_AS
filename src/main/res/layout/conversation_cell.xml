<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingTop="10dp"
	android:paddingBottom="10dp"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content">
  	
	<TextView
		android:id="@+id/time"
		android:textColor="#2d3540"
		android:textSize="13sp"
		android:singleLine="true"
		android:clickable="false"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:gravity="center_horizontal"
		android:layout_alignParentTop="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"/>
	
	<ImageView
		android:id="@+id/conversation_photo"
		android:background="@drawable/bighead"
		android:layout_centerVertical="true"
		android:layout_height="60dp"
		android:layout_width="60dp"/>
	<TextView
		android:id="@+id/conversation"
		android:textColor="#000000"
		android:textSize="28sp"
		android:gravity="left"
		android:maxWidth="640dp"
		android:padding="44dp"
		android:layout_marginRight="215dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	<com.pingshow.gif.GifView
		android:id="@+id/gifview"
		android:visibility="gone"
		android:layout_width="430dp"
		android:layout_height="150dp"/>
	<com.pingshow.airecenter.view.ProgressBar
	    android:id="@+id/progressbar"
	    android:layout_below="@+id/conversation"
	    android:layout_alignParentBottom="true"
	    android:layout_toLeftOf="@+id/conversation_photo"
	    android:visibility="gone"
	    android:layout_marginRight="20dp"
	    android:layout_width="430dp"
		android:layout_height="15dp"/>
	<com.pingshow.airecenter.view.AudioMsgPlayer
	    android:id="@+id/audio_msg"
	    android:layout_below="@+id/time"
	    android:layout_width="430dp"
		android:layout_height="75dp"/>
</RelativeLayout>

