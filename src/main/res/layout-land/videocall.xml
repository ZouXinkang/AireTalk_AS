        <SurfaceView
            android:id="@+id/video_capture_surface"
            android:layout_width="244dip"
            android:layout_height="200dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:id="@+id/panel"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/controls"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/add"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_margin="20dp"
                android:background="@drawable/incallbtn_bg"
                android:focusable="true"
                android:gravity="center"
                android:padding="12dp"
                android:src="@drawable/add_call"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/mute"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/incallbtn_bg"
                android:focusable="true"
                android:gravity="center"
                android:padding="12dp"
                android:src="@drawable/mute_off" />

            <ImageView
                android:id="@+id/keypad"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_margin="10dp"
                android:background="@drawable/incallbtn_bg"
                android:focusable="true"
                android:gravity="center"
                android:padding="12dp"
                android:visibility="gone"
                android:src="@drawable/keypad_btn" />

            <ImageView
                android:id="@+id/hold"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/incallbtn_bg"
                android:focusable="true"
                android:gravity="center"
                android:padding="12dp"
                android:src="@drawable/hold_off" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/minimize"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/incallbtn_bg"
                android:focusable="true"
                android:gravity="center"
                android:padding="12dp"
                android:src="@drawable/minimizebtn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controls"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/hangup"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/redbtn"
                android:focusable="true"
                android:maxWidth="160dp"
                android:padding="10dp"
                android:text="@string/end_call"
                android:textColor="#ffffffff"
                android:textSize="22sp"
                android:textStyle="bold" />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/ind0"
                android:layout_width="18dp"
                android:layout_height="24dp" />

            <ImageView
                android:id="@+id/ind1"
                android:layout_width="18dp"
                android:layout_height="24dp" />

            <ImageView
                android:id="@+id/ind2"
                android:layout_width="18dp"
                android:layout_height="24dp" />

            <ImageView
                android:id="@+id/ind3"
                android:layout_width="18dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/debug"
            android:padding="10dp"
            android:layout_below="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <TextView
                android:id="@+id/debuginfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#40f040"
                android:textSize="20sp" />
        </FrameLayout>
    </RelativeLayout>

</FrameLayout>