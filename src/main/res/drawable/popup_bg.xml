<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
   <item>
	  <shape>
      	 <gradient
	    	android:startColor="#f0ade2e0"
	    	android:centerColor="#f0cbefed"
			android:endColor="#cce0f4f3"
			android:angle="270"/>
		 <corners android:radius="15dip"/>
	  </shape>
   </item>
   <item android:bottom="90dip" android:top="-30sp" android:left="13dip" android:right="13dip">
      <shape android:shape="oval">
         <gradient
	    	android:startColor="#90ffffff"
	    	android:centerColor="#60ffffff"
			android:endColor="#00ffffff"
			android:angle="270"/>
		 <size android:height="60dip"/>
      </shape>
   </item>
   <item>
	  <shape>
	    <solid android:color="#00000000"/>
	    <corners android:radius="13dip"/>
	   	<stroke android:width="3dip" android:color="#d048babb"/>
	  </shape>
   </item>
</layer-list>