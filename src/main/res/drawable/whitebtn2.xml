<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
	    <layer-list>
   			<item android:left="2dp" android:right="2dp">
				<shape>
					<corners android:radius="4dip"/>
					<stroke android:width="1dip" android:color="#40707070"/>
					<gradient android:angle="270" android:endColor="#b9b9b9" android:centerColor="#a8a8a8" android:startColor="#c2c2c2" />
				</shape>	
			</item>
		</layer-list>
	</item>
	<item>  
	    <layer-list>
   			<item android:left="2dp" android:right="2dp">
   			    <shape>
					<corners android:radius="4dip"/>
					<stroke android:width="1dip" android:color="#40707070"/>
					<solid android:color="#ffffff"/>
				</shape>		
			</item>
		</layer-list>
	</item>	
</selector>