<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <!-- 设置按钮的四个角为弧形 -->
                    <!-- android:radius 弧形的半径 -->
                    <corners android:radius="5dip" />
                    <stroke android:width="1dp" android:color="#3997d5" />
                    <gradient android:endColor="#1397d5" android:gradientRadius="75" android:startColor="#3997d5" android:type="radial" android:useLevel="false" />

                </shape>
            </item>
            <item android:bottom="3dip" android:left="3dip" android:right="3dip" android:top="3dip">
                <shape>
                    <padding android:bottom="10dp" android:top="10dp" />
                    <corners android:radius="4dip" />
                    <solid android:color="#FFF" />
                </shape>
            </item>
        </layer-list>

    </item>
    <item>
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="#ffffff" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="5dip" />

            <stroke android:width="1dp" android:color="#3997d5" />
        </shape>
    </item>

</selector>

