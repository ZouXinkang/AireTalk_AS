<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape>
		<corners android:radius="13dp" />
		<padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
		<stroke android:width="1dip" android:color="#c0a2a5a9" />
		<gradient android:angle="270" android:centerColor="#efefef" android:endColor="#f4f4f4" android:startColor="#dbdbdb" />
	</shape></item>
<item>
<layer-list android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" >
	<item>
	<shape>
		<corners android:radius="13dp" />
		<stroke android:width="1dip" android:color="#c0a2a5a9" />
		<gradient android:angle="270" android:centerColor="#d3d3d3" android:endColor="#e4e4e4" android:startColor="#b2b2b2" />
	</shape>
	</item>
	<item android:bottom="20dp" android:left="8dp" android:right="8dp" android:top="1dp" >
	<shape>
		<corners android:radius="20dp" />
		<gradient android:angle="270" android:endColor="#00ffffff" android:startColor="#a0ffffff"/>
	</shape>
	</item>
</layer-list>
</item>
</selector>