<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">    
	<item android:state_pressed="true">
		<layer-list>
		   <item>
		      <shape>
		      	 <corners android:radius="10dip"/>
		         <gradient
			    	android:startColor="#707070" 
			    	android:centerColor="#202020"
					android:endColor="#202020"
					android:angle="270"/>
				 <stroke android:width="4dip" android:color="#50000000"/>
		      </shape>
		   </item>
		   <item android:left="5dip" android:top="5dip" android:right="5dip"  android:bottom="25dip">
		      <shape>
		         <gradient
			    	android:startColor="#707070"   
					android:endColor="#404040"
					android:angle="270"/>
		      </shape>
		   </item>
		   <item>
		      <shape>
		      	 <corners android:radius="10dip"/>
		         <stroke android:width="4dip"
			    	android:color="#c0101010"/>
			     <solid android:color="#00000000"/>
		      </shape>
		   </item>
		   <item>
   		  	<shape>
   	 	  		<corners android:radius="10dip"/>
      	  		<stroke android:width="1dip" android:color="#40ffffff"/>
   	  			<solid android:color="#00000000"/>
   		 	</shape>
		   </item>
		</layer-list>
	</item>
	<item>
		<layer-list>
		   <item>
		      <shape>
		      	 <corners android:radius="10dip"/>
