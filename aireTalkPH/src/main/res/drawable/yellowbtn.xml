			<item android:bottom="2dip" android:left="2dip" android:right="2dip" android:top="2dip"><shape>
				<corners android:radius="5dip" />
				<gradient android:angle="270" android:endColor="#ffff77" android:centerColor="#ffffa0" android:startColor="#ffffd0" />
			</shape></item>
		</layer-list></item>
	<item><layer-list>
		<item><shape>
			<corners android:radius="5dip" />
				<gradient android:angle="270" android:endColor="#808080" android:startColor="#f0f0f0" />
				</shape></item>
			<item android:bottom="2dip" android:left="2dip" android:right="2dip" android:top="2dip"><shape>
				<corners android:radius="5dip" />
