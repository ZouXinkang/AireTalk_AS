<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingTop="3dp"
	android:paddingBottom="3dp"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content">
  	
    <RelativeLayout
        android:id="@+id/title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >
		<TextView
			android:id="@+id/time"
			android:textColor="#707070"
			android:textSize="18sp"
			android:singleLine="true"
			android:clickable="false"
			android:paddingTop="12dp"
			android:paddingBottom="12dp"
			android:gravity="center_horizontal"
			android:layout_alignParentTop="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"/>
		<TextView
			android:id="@+id/username"
			android:textColor="#000000"
			android:textSize="13sp"
			android:maxWidth="300sp"
			android:lines="1"
			android:paddingLeft="9dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/time"
			android:gravity="bottom"
			android:visibility="gone"/>
	</RelativeLayout>
	<ImageView
		android:id="@+id/conversation_photo"
		android:background="@drawable/empty"
		android:padding="5dp"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_height="50dp"
		android:layout_width="50dp"
		android:layout_alignParentBottom="true"/>
	<TextView
		android:id="@+id/conversation"
		android:textColor="#000000"
		android:textSize="22sp"
		android:maxWidth="480sp"
		android:padding="15dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	<com.pingshow.gif.GifView
		android:id="@+id/gifview"
		android:padding="10dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	<com.pingshow.amper.view.ProgressBar
	    android:id="@+id/progressbar"
	    android:layout_below="@+id/conversation"
	    android:layout_alignParentBottom="true"
	    android:layout_toLeftOf="@+id/conversation_photo"
	    android:visibility="gone"
	    android:layout_width="200dp"
		android:layout_height="36dp"/>
	<com.pingshow.amper.view.AudioMsgPlayer
	    android:id="@+id/audio_msg"
	    android:layout_width="200dp"
		android:layout_height="64dp"/>
</RelativeLayout>

