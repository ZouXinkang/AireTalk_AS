<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@drawable/blankbackground"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ScrollView
 		android:layout_width="fill_parent"
 		android:layout_height="fill_parent">  
 		
	<LinearLayout 
		android:orientation="vertical"
		android:padding="50dp"
		android:gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		 	
		<TextView 
			android:id="@+id/id_desc" 
			android:layout_marginTop="30dp"
			android:textColor="#808080"
			android:textSize="26sp"
			android:padding="30dp"
			android:text="@string/login_desc_1"
			android:gravity="center"
			android:layout_gravity="center_vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
		
		<EditText android:id="@+id/username"
			android:hint="@string/username"
			android:layout_marginTop="36dp"
			android:textColor="#007192"
			android:inputType="textNoSuggestions"
			android:background="#00ffffff"
			android:gravity="bottom"
			android:paddingBottom="5dp"
			android:singleLine="true"
			android:paddingLeft="20dp"
			android:maxLength="32"
			android:textSize="26sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
		
		<View
		    android:background="#50909090"
		    android:layout_marginBottom="5dp"
		   	android:layout_width="fill_parent"
			android:layout_height="1dp"/>
		
		<EditText android:id="@+id/password1"
			android:hint="@string/password"
			android:layout_marginTop="20dp"
			android:textColor="#007192"
			android:background="#00ffffff"
			android:paddingBottom="5dp"
			android:singleLine="true"
			android:paddingLeft="20dp"
			android:inputType="textPassword"
			android:maxLength="20"
			android:textSize="26sp"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"/>
		
		<View
		    android:id="@+id/hr1"
		    android:background="#50909090"
		    android:layout_marginBottom="5dp"
		   	android:layout_width="fill_parent"
			android:layout_height="1dp"/>
		
		<LinearLayout
			android:gravity="center_horizontal"
			android:padding="50dp"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
			
			<Button android:id="@+id/login"
				android:text="@string/login"
				android:background="@drawable/plainbtn"
				android:textSize="26sp"
				android:textColor="#f0f0f0"
				android:minWidth="470dp"
				android:layout_width="wrap_content" 
				android:layout_height="64dp"/>
		</LinearLayout>
		
		<Button android:id="@+id/forget"
			android:text="@string/forget_password"
			android:textSize="24sp"
			android:textColor="@color/hyperlink"
			android:background="@drawable/null_select"
			android:layout_gravity="center_horizontal"
			android:layout_margin="40dp"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"/>
	</LinearLayout>
	</ScrollView>
	
</RelativeLayout>