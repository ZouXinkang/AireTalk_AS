<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingTop="3dp"
	android:paddingBottom="3dp"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content">
  	
    <RelativeLayout
        android:id="@+id/title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
		<TextView
			android:id="@+id/time"
			android:textColor="#707070"
			android:textSize="13sp"
			android:singleLine="true"
			android:clickable="false"
			android:paddingTop="3dp"
			android:paddingBottom="3dp"
			android:gravity="center_horizontal"
			android:layout_alignParentTop="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"/>
		<TextView
			android:id="@+id/username"
			android:textColor="#000000"
			android:textSize="9sp"
			android:maxWidth="150sp"
			android:lines="1"
			android:paddingLeft="6dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="bottom"
			android:visibility="gone"/>
    </RelativeLayout>
	<ImageView
		android:id="@+id/conversation_photo"
		android:background="@drawable/empty"
		android:padding="4dp"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_height="40dp"
		android:layout_width="40dp"
		android:layout_alignParentBottom="true"/>
	<TextView
		android:id="@+id/conversation"
		android:textColor="#000000"
		android:textSize="16sp"
		android:maxWidth="240sp"
		android:padding="6dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	<com.pingshow.gif.GifView
		android:id="@+id/gifview"
		android:padding="5dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	<com.pingshow.amper.view.ProgressBar
	    android:id="@+id/progressbar"
	    android:layout_below="@+id/conversation"
	    android:layout_alignParentBottom="true"
	    android:layout_toLeftOf="@+id/conversation_photo"
	    android:visibility="gone"
	    android:layout_width="200dp"
		android:layout_height="36dp"/>
	<com.pingshow.amper.view.AudioMsgPlayer
	    android:id="@+id/audio_msg"
	    android:layout_below="@+id/title"
	    android:layout_width="200dp"
		android:layout_height="64dp"/>
</RelativeLayout>

