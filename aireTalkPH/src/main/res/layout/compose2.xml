<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
	    android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<FrameLayout
		    android:id="@+id/title"
			android:layout_gravity="top"
			android:background="@drawable/titlebar"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
			<LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
				
				<RelativeLayout 
				    android:layout_width="fill_parent"
					android:layout_height="50dp">
					<ImageView
					    android:id="@+id/cancel" 
					    android:src="@drawable/back"
					    android:background="@drawable/optionbtn"
						android:padding="10dp"
						android:layout_centerVertical="true"
						android:layout_alignParentLeft="true"
						android:layout_width="50dp"
						android:layout_height="50dp"/>
					<TextView 
					    android:text="@string/compose_new"
					    android:textColor="#FFFFFFFF"
						android:maxWidth="200dp" 
						android:ellipsize="end"
						android:singleLine="true" 
						android:textSize="18sp"
						android:textStyle="bold" 
						android:shadowColor="#80000000"
				  	  	android:shadowDx="1"
				  	  	android:shadowDy="2"
				  	  	android:shadowRadius="2"
						android:layout_centerInParent="true"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"/>
					<ImageView
					    android:id="@+id/attachment"
					    android:src="@drawable/att_small_normal"
					    android:background="@drawable/optionbtn"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:padding="5dp"
						android:layout_marginRight="10dp"
						android:layout_width="50dp" 
						android:layout_height="50dp"/>
				</RelativeLayout>
				
				<LinearLayout 
				    android:background="@drawable/tiled_bg"
				    android:layoutAnimation="@anim/layout_slide_down_in"
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content">
					
				    <RelativeLayout
				        android:background="@drawable/searchbar_bg"
				        android:padding="10dp"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content">
						
				        <TextView
				            android:id="@+id/sendto"
							android:textColor="#808080"
							android:textSize="16sp"
							android:text="@string/sendto"
							android:padding="3dp"
							android:layout_centerVertical="true"
							android:layout_alignParentLeft="true"
							android:layout_marginLeft="5dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
				        
				        <RelativeLayout
				            android:id="@+id/picked"
							android:layout_toRightOf="@+id/sendto"
							android:layout_alignParentTop="true"
							android:paddingTop="10dp"
							android:paddingBottom="10dp"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"/>
				        
				        <ImageView
				            android:id="@+id/add"
							android:src="@drawable/add_user"
							android:background="@drawable/optionbtn"
							android:layout_centerVertical="true"
							android:layout_alignParentRight="true"
							android:layout_alignParentTop="true"
							android:padding="10dp"
							android:layout_width="50dp"
							android:layout_height="50dp"/>
				    </RelativeLayout>
			    </LinearLayout>
			</LinearLayout>
		</FrameLayout>
		<FrameLayout 
		    android:id="@+id/talkframe"
		    android:background="#efeeef"
			android:layout_width="fill_parent" 
			android:layout_height="0px"
			android:layout_weight="1">

			<ListView
			    android:background="#efeeef"
			    android:listSelector="@drawable/null_select"
			    android:cacheColorHint="#efeeef"
				android:divider="#efeeef" 
				android:dividerHeight="0px"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent" />
			
			<RelativeLayout 
			    android:id="@+id/messageitem"
			    android:background="@drawable/bkpanel"
				android:layout_gravity="bottom"
				android:visibility="gone"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				
				<LinearLayout 
				    android:orientation="horizontal"
					android:gravity="center_vertical"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip" 
					android:layout_width="fill_parent"
					android:layout_height="48dp">
					<ImageView
					    android:id="@+id/picturesms"
						android:src="@drawable/btnpic" 
						android:background="@drawable/optionbtn"
						android:layout_weight="1"
						android:layout_width="fill_parent"
						android:layout_height="40dp" />
					<ImageView 
					    android:id="@+id/photosms" 
					    android:src="@drawable/btn_pic_normal"
						android:background="@drawable/optionbtn"
						android:layout_weight="1"
						android:layout_width="fill_parent"
						android:layout_height="40dp" />
					<ImageView 
					    android:id="@+id/filesms"
						android:src="@drawable/fileupload"
						android:background="@drawable/optionbtn"
						android:layout_weight="1"
						android:layout_width="fill_parent"
						android:layout_height="40dp"/>
					<ImageView 
					    android:id="@+id/location"
						android:src="@drawable/btn_map"
						android:background="@drawable/optionbtn"
						android:layout_weight="1"
						android:layout_width="fill_parent"
						android:layout_height="40dp"/>
				</LinearLayout>
			</RelativeLayout>

		</FrameLayout>

		<FrameLayout 
		    android:id="@+id/attachedframe"
		    android:visibility="gone"
			android:background="@drawable/bkpanel"
			android:layout_width="fill_parent" 
			android:layout_height="55dp">

			<RelativeLayout
			    android:paddingTop="5dip"
				android:paddingBottom="5dip" 
				android:paddingLeft="10dip"
				android:paddingRight="10dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<ImageView
				    android:id="@+id/deletefile"
				    android:layout_alignParentLeft="true"
				    android:layout_centerVertical="true"
				    android:src="@drawable/delete"
					android:layout_width="30dp" 
					android:layout_height="30dp" />
				<ImageView 
				    android:id="@+id/voice"
				    android:src="@android:drawable/ic_btn_speak_now"
				    android:layout_centerInParent="true"
					android:layout_width="40dp" 
					android:layout_height="40dp" />
				<ImageView 
				    android:id="@+id/picture"
				    android:layout_centerInParent="true"
				    android:layout_width="45dp"
					android:layout_height="45dp" />
				<ImageView 
				    android:id="@+id/video"
				    android:layout_centerInParent="true"
				    android:src="@drawable/sm70"
					android:layout_width="45dp" 
					android:layout_height="45dp" />
				<ImageView 
				    android:id="@+id/file"
				    android:layout_centerInParent="true"
				    android:src="@drawable/sm71"
					android:layout_width="45dp" 
					android:layout_height="45dp" />
					
			   <TextView 
				    android:id="@+id/voice_smsinfo" 
				    android:visibility="gone"
				    android:layout_centerVertical="true"
				    android:layout_alignParentRight="true"
				    android:textColor="#ffffff"
				    android:shadowColor="#80000000"
			  	  	android:shadowDx="1"
			  	  	android:shadowDy="1"
			  	  	android:shadowRadius="1"
					android:ellipsize="end"
					android:singleLine="true" 
					android:textSize="15dp"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" />
								
			    <TextView 
				    android:id="@+id/smsinfo" 
				    android:textColor="#ffffff"
				    android:visibility="gone"
				    android:layout_centerVertical="true"
				    android:layout_alignParentRight="true"
				    android:shadowColor="#80000000"
			  	  	android:shadowDx="1"
			  	  	android:shadowDy="1"
			  	  	android:shadowRadius="1"
					android:ellipsize="end"
					android:singleLine="true" 
					android:textSize="15dp"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" />
				
			</RelativeLayout>
		</FrameLayout>
		
		
		<FrameLayout 
		    android:id="@+id/inputFrameLayout"
		    android:background="@drawable/bkpanel"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
			<RelativeLayout 
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
				<ImageView
					android:id="@+id/smile"
					android:src="@drawable/smiley"
					android:background="@drawable/optionbtn"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:padding="10dp"
					android:layout_width="50dp"
					android:layout_height="50dp"/>
				
				<Button 
				    android:text="@string/sendmsg" 
				    android:id="@+id/sendmsg"
				    android:visibility="invisible"
					android:textColor="#99ffffff" 
					android:textSize="15dip"
					android:background="@drawable/sendbtn"
					android:layout_alignParentRight="true" 
					android:layout_centerVertical="true"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:paddingLeft="10dp"
					android:paddingRight="10dp"
					android:layout_margin="3dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
				
				<ImageView 
				    android:id="@+id/voicesms"
				    android:layout_alignParentRight="true" 
					android:layout_centerVertical="true"
				    android:src="@drawable/big_mic"
				    android:layout_alignLeft="@+id/sendmsg"
					android:background="@drawable/optionbtn"
					android:padding="5dp"
					android:layout_width="50dp"
					android:layout_height="50dp"/>
				
				<EditText
				    android:id="@+id/msginput" 
				    android:hint="@string/textinput"
				    android:textColorHint="#c0c0c0"
					android:background="@drawable/edit_bg"
					android:textSize="18sp"
					android:padding="6sp"
					android:layout_margin="5dp" 
					android:layout_centerVertical="true"
					android:maxLines="3"
                    android:inputType="text"
					android:layout_toRightOf="@+id/smile" 
					android:layout_toLeftOf="@+id/sendmsg"
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" />
			</RelativeLayout>

		</FrameLayout>

	</LinearLayout>

	<ImageView 
	    android:id="@+id/speaker" 
	    android:visibility="gone"
		android:src="@drawable/anispeaker" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_centerInParent="true" />
</RelativeLayout>
	


