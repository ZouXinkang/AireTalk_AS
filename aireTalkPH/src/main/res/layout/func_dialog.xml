<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	
	<ImageView
		android:id="@+id/photo"
		android:clickable="true"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:layout_centerHorizontal="true"
		android:layout_alignParentTop="true"
		android:padding="9dp"
		android:layout_marginTop="20dp"
		android:background="@drawable/empty"/>
	
	<RelativeLayout
        android:id="@+id/members"
        android:layout_centerHorizontal="true"
		android:layout_alignParentTop="true"
		android:padding="10dp"
		android:layout_marginTop="20dp"
		android:layout_width="fill_parent"
		android:layout_height="120dp"/>
	
	<ImageView
        android:id="@+id/guard"
		android:src="@drawable/guard"
		android:background="@drawable/circlebtn"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_marginTop="100dp"
		android:layout_marginLeft="15dp"
		android:padding="8dp"
		android:visibility="gone"
		android:layout_width="54dp"
		android:layout_height="54dp"/>
	
	<ImageView
        android:id="@+id/edit"
		android:src="@drawable/add_user"
		android:background="@drawable/optionbtn"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_marginTop="100dp"
		android:layout_marginRight="5dp"
		android:padding="13dp"
		android:visibility="gone"
		android:layout_width="54dp"
		android:layout_height="54dp"/>
	
	<TextView
		android:id="@+id/displayname"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/photo"
		android:layout_centerHorizontal="true"
		android:shadowColor="#c0000000"
  	  	android:shadowDx="0"
  	  	android:shadowDy="2"
  	  	android:shadowRadius="3"
		android:gravity="center"
		android:textStyle="bold"
		android:typeface="sans"
		android:textColor="#ffffff"
		android:textSize="18sp" />

	<TextView
		android:id="@+id/mood"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/displayname"
		android:ellipsize="end"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:gravity="center"
		android:lines="1"
		android:textColor="#c0f0f0f0"
		android:textSize="13sp"/>
	
	<LinearLayout
	    android:id="@+id/func_1"
		android:layout_below="@+id/mood"
		android:orientation="horizontal"
		android:paddingBottom="5dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
		<ImageView
			android:id="@+id/call"
			android:layout_width="54dp"
			android:layout_height="54dp"
			android:layout_weight="1"
			android:background="@drawable/optionbtn"
			android:src="@drawable/func_call"
			android:padding="8dp"/>
		
		<ImageView
			android:id="@+id/videocall"
			android:layout_width="54dp"
			android:layout_height="54dp"
			android:layout_weight="1"
			android:background="@drawable/optionbtn"
			android:src="@drawable/func_video"
			android:padding="8dp"/>
		
		<ImageView
			android:id="@+id/chat"
			android:layout_width="54dp"
			android:layout_height="54dp"
			android:layout_weight="1"
			android:background="@drawable/optionbtn"
			android:src="@drawable/func_chat"
			android:padding="8dp"/>
		
		<ImageView
			android:id="@+id/walkietalkie"
			android:layout_width="54dp"
			android:layout_height="54dp"
			android:layout_weight="1"
			android:background="@drawable/optionbtn"
			android:src="@drawable/func_wt"
			android:padding="8dp"/>
		
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/func_1_desc"
		android:layout_below="@+id/func_1"
		android:layout_marginTop="-10dp"
		android:visibility="gone"
		android:orientation="horizontal"
		android:layout_marginLeft="3dp"
		android:layout_marginRight="5dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
		<TextView
		    android:id="@+id/call_desc"
		    android:text="@string/call"
		    android:gravity="center"
		    android:textColor="@color/title"
		    android:textSize="12sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		
		<TextView
		    android:id="@+id/videocall_desc"
		    android:text="@string/videocall"
		    android:gravity="center"
		    android:textColor="@color/title"
		    android:textSize="12sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		
		<TextView
		    android:id="@+id/chat_desc"
		    android:text="@string/chat"
		    android:gravity="center"
		    android:textColor="#ffffff"
		    android:textSize="12sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		
		<TextView
		    android:id="@+id/walkietalkie_desc"
		    android:text="@string/walkietalkie"
		    android:gravity="center"
		    android:textColor="@color/title"
		    android:textSize="12sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/func_2"
		android:layout_below="@+id/func_1_desc"
		android:orientation="horizontal"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
		
		<ImageView
			android:id="@+id/voicemsg"
			android:layout_width="54dp"
			android:layout_height="54dp"
			android:layout_weight="1"
			android:background="@drawable/optionbtn"
			android:src="@drawable/func_vm"
			android:padding="8dp"/>
		
		<ImageView
			android:id="@+id/picmsg"
			android:layout_width="54dp"
			android:layout_height="54dp"
			android:layout_weight="1"
			android:background="@drawable/optionbtn"
			android:src="@drawable/func_pic"
			android:padding="8dp"/>
		
		<ImageView
			android:id="@+id/file"
			android:layout_width="54dp"
			android:layout_height="54dp"
			android:layout_weight="1"
			android:background="@drawable/optionbtn"
			android:src="@drawable/func_file"
			android:padding="8dp"/>
		
		<ImageView
			android:id="@+id/location"
			android:layout_width="54dp"
			android:layout_height="54dp"
			android:layout_weight="1"
			android:background="@drawable/optionbtn"
			android:src="@drawable/func_loc"
			android:padding="8dp"/>
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/func_2_desc"
		android:layout_below="@+id/func_2"
		android:orientation="horizontal"
		android:layout_marginLeft="5dp"
		android:paddingBottom="10dp"
		android:layout_marginRight="5dp"
		android:layout_marginTop="-5dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
		
		<TextView
		    android:id="@+id/voice_desc"
		    android:text="@string/fafauser_vmemo"
		    android:gravity="center"
		    android:textColor="@color/title"
		    android:textSize="12sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		
		<TextView
		    android:text="@string/fafauser_pic"
		    android:gravity="center"
		    android:textColor="#ffffff"
		    android:textSize="12sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		
		<TextView
		    android:text="@string/filememo"
		    android:gravity="center"
		    android:textColor="#ffffff"
		    android:textSize="12sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		
		<TextView
		    android:id="@+id/locate_desc"
		    android:text="@string/fafauser_map"
		    android:gravity="center"
		    android:textColor="@color/title"
		    android:textSize="12sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/callpanel"
		android:layout_below="@+id/func_2_desc"
	  	android:layout_marginLeft="5dp"
	  	android:layout_marginRight="5dp"
	  	android:layout_marginBottom="5dp"
		android:orientation="horizontal"
		android:layout_centerHorizontal="true"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:visibility="gone"
	  	android:gravity="center" >
	  
		<ToggleButton android:id="@+id/mute"
		    android:background="@drawable/incallbtn_bg"
		    android:drawableTop="@drawable/mute"
			android:textOn="@string/mute"
			android:textOff="@string/mute"
			android:gravity="center"
			android:textColor="#c0c0c0"
			android:textSize="12sp"
			android:layout_width="100dp"
			android:layout_height="70dp"/>
			
		<ToggleButton android:id="@+id/speaker"
		    android:background="@drawable/incallbtn_bg"
		    android:drawableTop="@drawable/speaker"
			android:textOn="@string/speaker"
			android:textOff="@string/speaker"
			android:gravity="center"
			android:textColor="#c0c0c0"
			android:textSize="12sp"
			android:layout_width="100dp" 
			android:layout_height="70dp"/>
	</LinearLayout>
	
