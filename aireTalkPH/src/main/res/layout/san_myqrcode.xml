<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@android:color/white">
	<FrameLayout
	    android:id="@+id/title"
		android:layout_gravity="top"
		android:background="@drawable/titlebar"
		android:layout_width="fill_parent" 
		android:layout_height="50dp">
		
		<RelativeLayout
		    android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			
			<ImageView
			    android:id="@+id/cancel_san"
			    android:src="@drawable/back"
			    android:background="@drawable/optionbtn"
				android:padding="10dp" 
				android:layout_centerVertical="true"
				android:layout_alignParentLeft="true" 
				android:layout_width="50dp"
				android:layout_height="50dp"/>
			
			<TextView
			    android:text="@string/myqrcode"
				android:singleLine="true" 
				android:textSize="18sp"
				android:textColor="#ffffff"
				android:shadowColor="#80000000"
				android:shadowDx="0"
				android:shadowDy="-1"
				android:gravity="center"
				android:shadowRadius="1"
				android:textStyle="bold" 
				android:layout_centerInParent="true"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" />
		</RelativeLayout>
	</FrameLayout>
	<FrameLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="3">
	<RelativeLayout 
	    android:background="#d0cdcc"
		android:layout_width="300dp"
		android:layout_gravity="center"
		android:layout_height="300dp"
		>
			<ImageView 
        android:id="@+id/myqrcodeview"
        android:layout_width="299dp"
        android:layout_height="299dp"
        android:layout_centerInParent="true"
        android:background="#EFEFEF" 
        />
		<ImageView android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:layout_centerVertical="true"
		    android:layout_centerHorizontal="true"
		    android:src="@drawable/aire_icon_3"/>        
		
	</RelativeLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/twodimensional_code"
	    android:textSize="20dp"
	    android:gravity="center"
	    />
	</FrameLayout>
	
</LinearLayout>
	


