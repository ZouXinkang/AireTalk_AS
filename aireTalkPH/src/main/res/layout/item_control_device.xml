    <TextView
        android:id="@+id/tv_name"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/switch_devices"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="@string/smart_home_devices_name_status"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/switch_close_ib"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/device_control_bg"
        android:padding="2dp"
        android:paddingRight="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/switch_device_close_new" />

    <ImageButton
        android:id="@+id/switch_open_ib"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="70dp"
        android:layout_toLeftOf="@id/switch_close_ib"
        android:background="@drawable/device_control_bg"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/switch_device_open_new" />
</RelativeLayout>