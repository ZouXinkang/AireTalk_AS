            <!-- 				android:textColor="#ffffff" /> -->

            <!-- 		    <Button -->
            <!-- 				android:visibility="gone" -->
            <!-- 				android:id="@+id/add_group" -->
            <!-- 				android:layout_width="fill_parent" -->
            <!-- 				android:layout_height="wrap_content" -->
            <!-- 				android:layout_marginTop="1dp" -->
